.join
    background var(--softBlue)
    color white
    padding 3em 0 4em
    text-align center
    small 
        text-transform uppercase
        letter-spacing 3px

    @media screen and (min-width 1024px)
        .u-h4
            font-size 2em
            max-width 500px
            margin 0.5em auto 1em
.form
    max-width 550px
    margin auto
    &-input
        width 100%
        padding 1em
        box-sizing border-box
        margin-bottom 1em
        border-radius 0.4em
        border none
        font-size 0.9rem
        outline 0
        border 2px solid white
    &-validation   
        
        .u-p
            color white
            text-align left


    @media screen and (min-width 1024px)
        display flex
        
        &-input
            margin-bottom 0
        .form
            &-validation
                width 75%
                flex-shrink 0
                margin-right 1em