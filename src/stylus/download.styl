.download
    text-align center
    padding 3em 0
    .u-wrapper 
        > .u-p
            margin-bottom 3em
            max-width 500px
            margin auto
    &-grid
        margin 3em 1em 0
        // border 1px solid purple
        display grid
        grid-row-gap 2em
    &-item
        // border 1px solid red
        border-radius 1em
        padding 1.5em
        padding-top 2.5em
        background url('../images/bg-dots.svg') repeat-x center bottom 100px
        box-shadow 0 10px 20px -5px #d7d7d7
        .u-p
            margin-bottom 4em
            margin-top .5rem
        .u-h3
            margin-bottom .5rem
            margin-top 2rem

    @media screen and (min-width 1024px)
        .u-wrapper
                max-width 1140px
        &-grid  
            grid-template-columns 1fr 1fr 1fr
            grid-column-gap 2em
            padding-bottom 5em
        &-item
            &:nth-of-type(2)
                top 4em
                position relative
            &:nth-of-type(3)
                top 7em
                position relative