.download
    text-align center
    padding 3em 0
    .u-wrapper
        >.u-p
            margin-bottom 3em
    &-grid
        margin 3em 1em 0
        // border 1px solid purple
        display grid
        grid-row-gap 2em
    &-item
        // border 1px solid red
        border-radius 1em
        padding 1.5em
        padding-top 2.5em
        background url('../images/bg-dots.svg') repeat-x center bottom 100px
        box-shadow 0 10px 20px -5px #d7d7d7
        .u-p
            margin-bottom 4em
            margin-top .5rem
        .u-h3
            margin-bottom .5rem
            margin-top 2rem
